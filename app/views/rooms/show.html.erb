<h1>DM</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <div class="">
  <strong>
    <a class="" href="/users/<%= e.user.id %>">
      <%= e.user.name %>さん
    </a>
  </strong>
  </div>
<% end %>
<hr>
<div class="">
  <div class="">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="">
          <div class=""> <strong><%= m.content %></strong> <br>
          <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %>さん</a></strong></small>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="">
    <%= form_for @message do |f| %>
      <%= f.text_field :content, placeholder: "メッセージを入力して下さい" , size: 70, class:"" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "送信",class: ''%>
    <% end %>
  </div>
</div>


