<h1>トップページ</h1>

<% if user_signed_in? %>
  <%= link_to 'ログアウトする', destroy_user_session_path, method: :delete, class: "" %>
  <%= link_to '投稿する', new_post_path, class: '' %>
  <div class = "">
    <%= "ユーザー名："%>
    <%= link_to current_user.name, user_path(current_user), method: :get %>
  </div>
<% else %>
  <%= link_to "ログイン", new_user_session_path %>
  <%= link_to "新規登録", new_user_registration_path %>
<% end%>

<div class ="search">
  <%= form_with(url: search_posts_path, local: true, method: :get, class: "") do |form| %>
    <%= form.date_field :keyword, class: "" %>
    <%= form.submit "検索", class: "" %>
  <% end %>
</div>

<%= link_to '投稿一覧', posts_path, class: '' %>

